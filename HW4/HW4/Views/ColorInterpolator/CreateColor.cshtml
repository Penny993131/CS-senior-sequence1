
@{
    ViewBag.Title = "CreateColor";
}

<h2>CreateColor</h2>
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("CreateColor", "ColorInterpolator", FormMethod.Post))
        {
            @Html.Label("color1", "First Color: ")
            @Html.TextBox("color1", null, new { @Class = "form-control", type = "string", required = "required", min = "0", max = "255" })
            @Html.Label("color2", "Second Color: ")
            @Html.TextBox("color2", null, new { @Class = "form-control", type = "string", required = "required", min = "0", max = "255" })
            @Html.Label("numofcolors", "Number of Colors: ")
            @Html.TextBox("numofcolors", null, new { @Class = "form-control", type = "number", required = "required", min = "0", max = "255" })

            <button type="submit">Display</button>

        }
    </div>
</div>
